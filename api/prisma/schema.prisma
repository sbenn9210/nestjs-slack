// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id      String @id @default(uuid())
  name    String
  ownerId String
}

model Message {
  id        String   @id @default(uuid())
  content   String
  userId    String
  channelId String
  createdAt DateTime @default(now())
}

model Member {
  id     String @id @default(uuid())
  teamId String
  userId String
}

model Channel {
  id          String   @id @default(uuid())
  name        String
  description String   @default("null")
  teamId      String?
  public      Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
